{
  "name": "nav-dashboard",
  "version": "1.0.0",
  "description": "一个基于磨砂玻璃风格的现代化个人导航站，完全免费部署在 Cloudflare",
  "main": "worker.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "d1:create": "wrangler d1 create nav_db",
    "d1:init": "wrangler d1 execute nav_db --file=schema.sql",
    "d1:sample": "wrangler d1 execute nav_db --file=sample-data.sql",
    "d1:query": "wrangler d1 execute nav_db --command"
  },
  "keywords": [
    "navigation",
    "dashboard",
    "cloudflare",
    "workers",
    "d1",
    "glassmorphism",
    "personal-homepage"
  ],
  "author": "Your Name",
