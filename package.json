  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nav-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nav-dashboard/issues"
  },
  "homepage": "https://github.com/yourusername/nav-dashboard#readme",
  "devDependencies": {
    "wrangler": "^3.78.0"
  }
}

